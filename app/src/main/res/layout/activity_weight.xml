<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/convertor_new_background"
        android:gravity="center"
        android:orientation="vertical">


        <include
            android:id="@+id/header"
            layout="@layout/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/convertor_cardview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_horizontal_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="2"
                        tools:listitem="@layout/row_view_picker_item"

                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/rv_horizontal_picker_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:src="@drawable/recycler_image"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="8"
                        tools:listitem="@layout/row_view_picker_item"

                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/input_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:background="@drawable/round_edit_text"
                        android:hint="0.000000"
                        android:inputType="numberDecimal"
                        android:clickable="false"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_40sdp"
                        android:paddingEnd="@dimen/_40sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rv_horizontal_picker" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/calculator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/input_value"
                        tools:context=".MainActivity">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/unit_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintVertical_weight="1"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintBottom_toTopOf="@id/table_calculator"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:itemCount="8"
                            tools:listitem="@layout/list_unit_item" />



                        <TableLayout
                            android:id="@+id/table_calculator"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="fill"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/unit_recycler"
                            app:layout_constraintVertical_weight=".7">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSeven"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="7"
                                    android:textColor="@color/colorBlack"
                                    android:translationZ="2dp"
                                    app:elevation="5dp" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnEight"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="8" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnNine"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="9" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/btnDivide"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/cross_button_background"
                                    android:onClick="Clear"
                                    android:src="@drawable/crossbutton"
                                    android:text="/"
                                    />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnFour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="4" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnFive"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="5" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSix"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="6" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnMultiply"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="*" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnOne"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="1" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnTwo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="2" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnThree"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="3" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSubtract"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="-" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnDecimal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDecimalPoint"
                                    android:text="." />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnZero"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="0" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnClear"
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/gotham_bold"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onClear"
                                    android:text="AC" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnAdd"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="+" />
                            </TableRow>

                        </TableLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>