<?xml version="1.0" encoding="utf-8"?>
<layout>




<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:textSize = "20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/from"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_value"
        android:hint="0"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinner"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/kilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KiloGram:"
        android:textSize = "20dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/from"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_kilo"
        android:hint="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/kilo"
        app:layout_constraintTop_toTopOf="@id/kilo"
        app:layout_constraintBottom_toBottomOf="@id/kilo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Gram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gram:"
        android:textSize = "20dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/kilo"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_gram"
        android:hint="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/Gram"
        app:layout_constraintTop_toTopOf="@id/Gram"
        app:layout_constraintBottom_toBottomOf="@id/Gram"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/miligram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIliGram:"
        android:textSize = "20dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/Gram"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_miligram"
        android:hint="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/miligram"
        app:layout_constraintTop_toTopOf="@id/miligram"
        app:layout_constraintBottom_toBottomOf="@id/miligram"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/microgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MicroGram:"
        android:textSize = "20dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/miligram"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_microgram"
        android:hint="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/microgram"
        app:layout_constraintTop_toTopOf="@id/microgram"
        app:layout_constraintBottom_toBottomOf="@id/microgram"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nanogram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NanoGram:"
        android:textSize = "20dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/microgram"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_nanogram"
        android:hint="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/nanogram"
        app:layout_constraintTop_toTopOf="@id/nanogram"
        app:layout_constraintBottom_toBottomOf="@id/nanogram"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/picogram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PicoGram:"
        android:textSize = "20dp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/nanogram"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_picogram"
        android:hint="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/picogram"
        app:layout_constraintTop_toTopOf="@id/picogram"
        app:layout_constraintBottom_toBottomOf="@id/picogram"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>