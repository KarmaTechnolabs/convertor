<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/convertor_new_background"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/convertor_cardview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_7sdp"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/convertor_new_background">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_horizontal_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    ads:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:itemCount="2"
                    tools:listitem="@layout/row_view_picker_item"

                    />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/input_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                     android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/round_edit_text"
                    android:hint="0.000"
                    android:inputType="numberDecimal"
                    ads:layout_constraintTop_toBottomOf="@id/rv_horizontal_picker"
                    app:layout_constraintEnd_toEndOf="parent"
                    ads:layout_constraintBottom_toTopOf="@id/unit_recycler"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/unit_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:padding="@dimen/_8sdp"
                    tools:itemCount="4"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/input_value"
                    ads:layout_constraintEnd_toEndOf="parent"
                    ads:layout_constraintBottom_toTopOf="@id/calculator"
                    tools:listitem="@layout/list_unit_item"
           />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/calculator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/unit_recycler"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:context=".MainActivity">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_goneMarginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        ads:layout_constraintTop_toTopOf="parent"
                        android:gravity="fill">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="7"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:translationZ="2dp"
                                app:elevation="5dp"
                                android:background="@drawable/button_background_calculator"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnSeven"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="8"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnEight"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="9"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnNine"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="/"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnDivide"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="4"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnFour"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="5"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnFive"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="6"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnSix"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="*"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnMultiply"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="1"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnOne"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="2"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnTwo"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="3"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnThree"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="-"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnSubtract"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="."
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnDecimal"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="0"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnZero"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="CLR"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnClear"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:text="+"
                                android:background="@drawable/button_background_calculator"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:onClick="@{clickListener::onClick}"
                                android:id="@+id/btnAdd"/>
                        </TableRow>


                    </TableLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>