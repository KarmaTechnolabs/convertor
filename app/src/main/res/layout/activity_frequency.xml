<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/convertor_new_background"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.activities.FrequencyActivity">

        <include
            android:id="@+id/header"
            layout="@layout/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/convertor_cardview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_horizontal_picker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1"
                    tools:itemCount="2"
                    tools:listitem="@layout/row_view_picker_item"

                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rv_horizontal_picker_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:src="@drawable/recycler_image"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/input_value"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1"
                    tools:itemCount="8"
                    tools:listitem="@layout/row_view_picker_item" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/input_value"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:background="@drawable/round_edit_text"
                    android:clickable="false"
                    android:hint="0.000000"
                    android:inputType="numberDecimal"
                    android:paddingStart="@dimen/_40sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_horizontal_picker"
                    app:layout_constraintVertical_weight="1" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/calculator"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/input_value"
                    app:layout_constraintVertical_weight="1"
                    tools:context=".MainActivity">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/unit_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toTopOf="@id/table_constraint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_weight="1"
                        tools:itemCount="8"
                        tools:listitem="@layout/list_unit_item" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/table_constraint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/unit_recycler">

                        <TableLayout
                            android:id="@+id/table_calculator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="fill"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_weight=".7">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSeven"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="7"
                                    android:textColor="@color/colorBlack"
                                    android:translationZ="2dp"
                                    app:elevation="5dp" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnEight"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="8"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnNine"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="9"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/btnDivide"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/cross_button_background"
                                    android:onClick="Clear"
                                    android:src="@drawable/crossbutton"
                                    android:text="/"
                                    android:textColor="@color/colorBlack" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnFour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="4"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnFive"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="5"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSix"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="6"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnMultiply"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="*"
                                    android:textColor="@color/colorBlack" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnTwo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="2"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnThree"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="3"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnOne"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="1"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSubtract"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="-"
                                    android:textColor="@color/colorBlack" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnDecimal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDecimalPoint"
                                    android:text="."
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnZero"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="onDigit"
                                    android:text="0"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnClear"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:fontFamily="@font/gotham_bold"
                                    android:onClick="onClear"
                                    android:text="AC"
                                    android:textColor="@color/colorBlack" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnAdd"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_background_calculator"
                                    android:onClick="@{clickListener::onClick}"
                                    android:text="+"
                                    android:textColor="@color/colorBlack" />

                            </TableRow>

                        </TableLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>